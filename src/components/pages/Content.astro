<style>
	.content-section {
		background: linear-gradient(180deg, #15171F 0%, #1a1c26 50%, #15171F 100%);
		padding: 100px 20px;
		position: relative;
		overflow: hidden;
	}

	.content-section::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 1px;
		background: linear-gradient(90deg, transparent, #FFACC8, transparent);
		opacity: 0.3;
	}

	.content-container {
		max-width: 1200px;
		margin: 0 auto;
	}

	/* Mission Section */
	.mission-section {
		position: relative;
		text-align: center;
		margin-bottom: 100px;
		padding: 60px 0;
	}

	.mission-content {
		position: relative;
		z-index: 2;
	}

	.mission-badge {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: rgba(255, 172, 200, 0.1);
		border: 1px solid rgba(255, 172, 200, 0.3);
		padding: 10px 24px;
		border-radius: 50px;
		margin-bottom: 24px;
		animation: float 3s ease-in-out infinite;
	}

	.badge-icon {
		font-size: 1.2rem;
		animation: sparkle 2s ease-in-out infinite;
	}

	.badge-text {
		color: #FFACC8;
		font-weight: 600;
		font-size: 0.95rem;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.mission-title {
		font-size: 3rem;
		font-weight: bold;
		color: #FFFFFF;
		margin-bottom: 24px;
		line-height: 1.3;
	}

	.highlight-text {
		background: linear-gradient(135deg, #FFACC8, #FF0087, #FFACC8);
		background-size: 200% auto;
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: gradient-flow 3s ease infinite;
	}

	.mission-description {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 700px;
		margin: 0 auto;
		line-height: 1.8;
	}

	.mission-decoration {
		position: absolute;
		inset: 0;
		pointer-events: none;
		z-index: 1;
	}

	.floating-element {
		position: absolute;
		font-size: 3rem;
		opacity: 0.15;
		animation: float-random 6s ease-in-out infinite;
	}

	.element-1 {
		top: 10%;
		left: 10%;
		animation-delay: 0s;
	}

	.element-2 {
		top: 20%;
		right: 15%;
		animation-delay: 1s;
	}

	.element-3 {
		bottom: 15%;
		left: 15%;
		animation-delay: 2s;
	}

	/* Timeline */
	.features-timeline {
		position: relative;
		max-width: 800px;
		margin: 0 auto 100px;
	}

	.features-timeline::before {
		content: '';
		position: absolute;
		left: 50%;
		top: 0;
		bottom: 0;
		width: 2px;
		background: linear-gradient(180deg, transparent, #FFACC8, transparent);
		transform: translateX(-50%);
	}

	.timeline-item {
		display: flex;
		gap: 30px;
		margin-bottom: 60px;
		position: relative;
		animation: slide-in-left 0.6s ease-out forwards;
		opacity: 0;
	}

	.timeline-item:nth-child(1) {
		animation-delay: 0.2s;
	}

	.timeline-item:nth-child(2) {
		animation-delay: 0.4s;
		flex-direction: row-reverse;
		animation-name: slide-in-right;
	}

	.timeline-item:nth-child(3) {
		animation-delay: 0.6s;
	}

	.timeline-icon {
		flex-shrink: 0;
		width: 70px;
		height: 70px;
		background: linear-gradient(135deg, rgba(255, 0, 135, 0.2), rgba(255, 172, 200, 0.2));
		border: 2px solid rgba(255, 172, 200, 0.4);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		color: #FFACC8;
		position: relative;
		z-index: 2;
		transition: all 0.4s ease;
	}

	.timeline-item:hover .timeline-icon {
		transform: scale(1.1) rotate(5deg);
		border-color: #FFACC8;
		box-shadow: 0 0 30px rgba(255, 0, 135, 0.5);
	}

	.timeline-content {
		flex: 1;
		background: rgba(255, 172, 200, 0.05);
		border: 1px solid rgba(255, 172, 200, 0.2);
		border-radius: 16px;
		padding: 24px;
		backdrop-filter: blur(10px);
		transition: all 0.4s ease;
	}

	.timeline-item:hover .timeline-content {
		background: rgba(255, 172, 200, 0.1);
		border-color: #FFACC8;
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(255, 0, 135, 0.3);
	}

	.timeline-title {
		font-size: 1.5rem;
		font-weight: 600;
		color: #FFACC8;
		margin-bottom: 12px;
	}

	.timeline-text {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.7;
		font-size: 1rem;
	}

	/* CTA Banner */
	.cta-banner {
		position: relative;
		background: linear-gradient(135deg, rgba(255, 0, 135, 0.15), rgba(255, 172, 200, 0.15));
		border: 2px solid rgba(255, 172, 200, 0.3);
		border-radius: 24px;
		padding: 60px 40px;
		text-align: center;
		overflow: hidden;
		backdrop-filter: blur(10px);
	}

	.cta-glow {
		position: absolute;
		inset: -50%;
		background: radial-gradient(circle, rgba(255, 0, 135, 0.3) 0%, transparent 70%);
		animation: glow-pulse 4s ease-in-out infinite;
	}

	.cta-content {
		position: relative;
		z-index: 2;
	}

	.cta-title {
		font-size: 2.5rem;
		font-weight: bold;
		color: #FFFFFF;
		margin-bottom: 16px;
	}

	.cta-subtitle {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 32px;
	}

	.cta-button {
		display: inline-flex;
		align-items: center;
		gap: 12px;
		background: linear-gradient(to right, #FF0087, #FFACC8);
		color: #FFFFFF;
		padding: 18px 48px;
		border-radius: 50px;
		font-weight: 600;
		font-size: 1.1rem;
		text-decoration: none;
		transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
		box-shadow: 0 10px 40px rgba(255, 0, 135, 0.4);
		position: relative;
		overflow: hidden;
	}

	.cta-button::before {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(to right, #FFACC8, #FF0087);
		opacity: 0;
		transition: opacity 0.4s ease;
	}

	.cta-button:hover {
		transform: scale(1.08) translateY(-3px);
		box-shadow: 0 15px 50px rgba(255, 0, 135, 0.6);
	}

	.cta-button:hover::before {
		opacity: 1;
	}

	.button-text,
	.button-icon {
		position: relative;
		z-index: 1;
	}

	.button-icon {
		transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
	}

	.cta-button:hover .button-icon {
		transform: translateX(8px) rotate(5deg);
	}

	/* Animations */
	@keyframes float {
		0%, 100% {
			transform: translateY(0);
		}
		50% {
			transform: translateY(-10px);
		}
	}

	@keyframes sparkle {
		0%, 100% {
			transform: scale(1) rotate(0deg);
		}
		50% {
			transform: scale(1.2) rotate(180deg);
		}
	}

	@keyframes gradient-flow {
		0%, 100% {
			background-position: 0% center;
		}
		50% {
			background-position: 100% center;
		}
	}

	@keyframes float-random {
		0%, 100% {
			transform: translate(0, 0) rotate(0deg);
		}
		33% {
			transform: translate(20px, -20px) rotate(5deg);
		}
		66% {
			transform: translate(-15px, 15px) rotate(-5deg);
		}
	}

	@keyframes slide-in-left {
		from {
			opacity: 0;
			transform: translateX(-50px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes slide-in-right {
		from {
			opacity: 0;
			transform: translateX(50px);
		}
		to {
			opacity: 1;
			transform: translateX(0);
		}
	}

	@keyframes glow-pulse {
		0%, 100% {
			opacity: 0.5;
			transform: scale(1);
		}
		50% {
			opacity: 0.8;
			transform: scale(1.1);
		}
	}

	/* Responsive */
	@media (max-width: 768px) {
		.content-section {
			padding: 60px 20px;
		}

		.mission-section {
			margin-bottom: 60px;
			padding: 40px 0;
		}

		.mission-title {
			font-size: 2rem;
		}

		.mission-description {
			font-size: 1rem;
		}

		.features-timeline::before {
			left: 35px;
		}

		.timeline-item,
		.timeline-item:nth-child(2) {
			flex-direction: row;
			animation-name: slide-in-left;
		}

		.timeline-icon {
			width: 60px;
			height: 60px;
		}

		.timeline-content {
			padding: 20px;
		}

		.timeline-title {
			font-size: 1.2rem;
		}

		.cta-banner {
			padding: 40px 24px;
		}

		.cta-title {
			font-size: 1.8rem;
		}

		.cta-subtitle {
			font-size: 1rem;
		}

		.cta-button {
			padding: 16px 36px;
			font-size: 1rem;
		}
	}
</style>
