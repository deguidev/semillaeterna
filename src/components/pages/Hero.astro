---
import BookCarousel from "./BookCarousel.astro";

// Hero component for Sermones/Prédicas
---

<section class="hero-section relative overflow-hidden">
	<!-- Background decorative elements -->
	<div class="absolute inset-0 bg-gradient-radial"></div>
	<div class="absolute top-0 right-0 w-96 h-96 bg-pink-glow rounded-full blur-3xl opacity-20"></div>
	<div class="absolute bottom-0 left-0 w-80 h-80 bg-rose-glow rounded-full blur-3xl opacity-15"></div>
	
	<!-- Cross decoration -->
	<div class="absolute top-20 right-10 opacity-10 cross-decoration">
		<svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor">
			<path d="M12 2v20M2 12h20" stroke-width="2" stroke-linecap="round"/>
		</svg>
	</div>
	<div class="absolute bottom-20 left-10 opacity-10 cross-decoration">
		<svg width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor">
			<path d="M12 2v20M2 12h20" stroke-width="2" stroke-linecap="round"/>
		</svg>
	</div>

	<!-- Main content -->
	<div class="relative z-10 min-h-screen flex flex-col justify-center px-4 pt-12 pb-4">
		<div class="max-w-6xl mx-auto text-center flex-shrink-0">
			
			<!-- Logo -->
			<div class="flex justify-center mb-4 animate-fade-in">
				<div class="logo-container">
					<img src="/semilla.png" alt="Semilla Eterna" class="logo-image" />
				</div>
			</div>

			<!-- Subtitle with icon -->
			<div class="flex items-center justify-center gap-3 mb-4 animate-fade-in">
				<div class="h-px w-12 subtitle-line"></div>
				<span class="subtitle-text text-sm md:text-base font-medium tracking-widest uppercase">
					Palabra de Vida
				</span>
				<div class="h-px w-12 subtitle-line"></div>
			</div>

			<!-- Main heading -->
			<h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-4 leading-tight animate-slide-up">
				<span class="text-white block mb-1">Semilla</span>
				<span class="text-gradient-animated">
					Eterna
				</span>
			</h1>

			<!-- Description -->
			<p class="text-gray-300 text-base md:text-lg lg:text-xl mb-3 max-w-3xl mx-auto leading-relaxed animate-fade-in-delay">
				Prédicas y sermones que transforman vidas
			</p>
			<p class="verse-text text-sm md:text-base mb-6 italic animate-fade-in-delay-2">
				"Porque la palabra de Dios es viva y eficaz" - Hebreos 4:12
			</p>

			<!-- CTA Buttons -->
			<div class="flex flex-col sm:flex-row gap-3 justify-center items-center animate-fade-in-delay-3 mb-6">
				<a 
					href="/predicas/example" 
					class="btn-primary group relative px-8 py-4 text-white rounded-full font-semibold text-lg transition-all duration-300 hover:scale-105 overflow-hidden"
				>
					<span class="relative z-10 flex items-center gap-2">
						Explorar Prédicas
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="group-hover:translate-x-1 transition-transform">
							<path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</span>
				</a>
				
				<a 
					href="#about" 
					class="btn-secondary group px-8 py-4 bg-transparent text-white rounded-full font-semibold text-lg transition-all duration-300 hover:scale-105 backdrop-blur-sm"
				>
					<span class="flex items-center gap-2">
						Conocer Más
						<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" class="group-hover:rotate-90 transition-transform">
							<circle cx="12" cy="12" r="10" stroke-width="2"/>
							<path d="M12 16v-4M12 8h.01" stroke-width="2" stroke-linecap="round"/>
						</svg>
					</span>
				</a>
			</div>

		</div>

		<!-- Book Carousels at bottom of Hero -->
		<div class="relative z-10 mt-4 flex-shrink-0">
			<BookCarousel />
		</div>

        <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce scroll-indicator">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor">
					<path d="M12 5v14M19 12l-7 7-7-7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
		</div>
	</div>

</section>

<style>
	.hero-section {
		background-color: #15171F;
		position: relative;
	}

	.bg-gradient-radial {
		background: radial-gradient(circle at 50% 50%, rgba(255, 0, 135, 0.05) 0%, transparent 50%);
	}

	.bg-pink-glow {
		background-color: #FFACC8;
	}

	.bg-rose-glow {
		background-color: #FF0087;
	}

	/* Logo styling */
	.logo-container {
		position: relative;
		display: inline-block;
		padding: 8px;
		border-radius: 50%;
		background: rgba(255, 172, 200, 0.1);
		backdrop-filter: blur(10px);
		box-shadow: 0 8px 32px rgba(255, 0, 135, 0.15);
		transition: all 0.3s ease;
	}

	.logo-container:hover {
		transform: scale(1.05);
		box-shadow: 0 12px 40px rgba(255, 0, 135, 0.25);
		background: rgba(255, 172, 200, 0.15);
	}

	.logo-image {
		width: 80px;
		height: 80px;
		object-fit: contain;
		display: block;
		filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
	}

	@media (max-width: 768px) {
		.logo-image {
			width: 60px;
			height: 60px;
		}
	}

	/* Cross decoration */
	.cross-decoration {
		color: #FFACC8;
	}

	/* Subtitle styling */
	.subtitle-line {
		background: linear-gradient(to right, transparent, #FFACC8, transparent);
	}

	.subtitle-text {
		color: #FFACC8;
	}

	/* Animated gradient text for "Eterna" */
	.text-gradient-animated {
		background: linear-gradient(to right, #FFACC8, #FF0087, #FFACC8);
		background-size: 200% auto;
		-webkit-background-clip: text;
		background-clip: text;
		-webkit-text-fill-color: transparent;
		animation: gradient-shift 3s ease infinite;
		font-weight: bold;
	}

	@keyframes gradient-shift {
		0%, 100% {
			background-position: 0% center;
		}
		50% {
			background-position: 100% center;
		}
	}

	/* Verse text */
	.verse-text {
		color: rgba(255, 172, 200, 0.8);
	}

	/* Primary button */
	.btn-primary {
		background: linear-gradient(to right, #FF0087, #FFACC8);
		box-shadow: 0 10px 40px rgba(255, 0, 135, 0.3);
	}

	.btn-primary:hover {
		box-shadow: 0 20px 60px rgba(255, 0, 135, 0.5);
	}

	/* Secondary button */
	.btn-secondary {
		border: 2px solid rgba(255, 172, 200, 0.5);
	}

	.btn-secondary:hover {
		background-color: rgba(255, 172, 200, 0.1);
		border-color: #FFACC8;
	}

	/* Scroll indicator */
	.scroll-indicator {
		color: rgba(255, 172, 200, 0.6);
	}

	@keyframes fade-in {
		from {
			opacity: 0;
			transform: translateY(20px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slide-up {
		from {
			opacity: 0;
			transform: translateY(40px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in {
		animation: fade-in 0.8s ease-out forwards;
	}

	.animate-fade-in-delay {
		opacity: 0;
		animation: fade-in 0.8s ease-out 0.2s forwards;
	}

	.animate-fade-in-delay-2 {
		opacity: 0;
		animation: fade-in 0.8s ease-out 0.4s forwards;
	}

	.animate-fade-in-delay-3 {
		opacity: 0;
		animation: fade-in 0.8s ease-out 0.6s forwards;
	}

	.animate-slide-up {
		animation: slide-up 1s ease-out forwards;
	}

	.animate-bounce {
		animation: bounce 2s infinite;
	}

	@keyframes bounce {
		0%, 100% {
			transform: translateX(-50%) translateY(0);
		}
		50% {
			transform: translateX(-50%) translateY(-10px);
		}
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.hero-section h1 {
			font-size: 3rem;
		}
	}
</style>